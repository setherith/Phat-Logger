doctype html
html
	head
		title pHAT Log
		link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
		script(src='/jquery/jquery.min.js')
		script(src='/bootstrap/js/bootstrap.min.js')
		script(src='/chart/Chart.min.js')
	body
		div.container
			div.row.col-md-10.col-md-offset-1
				div#header(style="text-align: center;")
					h3 Enviro pHAT - Status
					img(src='/public/images/en-phat.png', style="height: 150px;")

				form(style="margin-top: 20px;")
					div.form-group
						label Log:
						textarea.form-control(style="height: 300px; font-family: Courier") #{rows}

		div.row.col-md-10.col-md-offset-1(style="border: 1 solid black")
			a(href="https://shop.pimoroni.com/products/enviro-phat") Where do I get one?
		
		div(class="row")
			canvas(id="myChart" width="100" height="100")

	script.
		var ctx = document.getElementById("myChart")
			var myChart = new Chart(ctx, {
				type: 'bar',
				data: {
					labels: ["Red", "Blue", "Yellow", "Green", "Purple", "Orange"],
					datasets: [{
						label: 'Values',
						data: [1, 2, 3, 4, 5, 6],
						backgroundColor: ['rgba(255, 99, 132, 0.2)', 'rgba(54, 162, 235, 0.2)', 'rgba(255, 206, 86, 0.2)', 'rgba(75, 192, 192, 0.2)', 'rgba(153, 102, 255, 0.2)', 'rgba(255, 159, 64, 0.2)'],
						borderColor: [ 'rgba(255,99,132,1)', 'rgba(54, 162, 235, 1)', 'rgba(255, 206, 86, 1)', 'rgba(75, 192, 192, 1)', 'rgba(153, 102, 255, 1)', 'rgba(255, 159, 64, 1)'],
						borderWidth: 1
					}]
				},
				options: {
					scales: {
						yAxes: [{
							ticks: {
								beginAtZero:true
							}
						}]
					}
				}
			})